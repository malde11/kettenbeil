*{margin:0;padding:0}:root{--data-color-primary:#00a2ff;--data-color-secondary:#333}.container{display:grid;height:100vh;grid-template-columns:1fr;grid-template-rows:.1fr 1fr 1fr 1fr;grid-template-areas:"nav" "header" "main" "footer"}nav{grid-area:nav;background-color:blue}header{grid-area:header;background-color:#008b8b}main{grid-area:main;background-color:#d2691e}footer{grid-area:footer;background-color:#6495ed}nav{position:fixed;top:0;left:0;right:0;width:100vw;background-color:#333;z-index:1}#burgerMenu{display:inline;float:right;padding:20px 15px 15px}.dot-arrow{padding-right:10px}.topnav a{display:none;color:#fff;text-decoration:none;font-size:20px}.topnav.responsive .icon{position:absolute;right:0;top:0;z-index:2}.topnav.responsive a{display:block;float:none;padding:16px 0}.responsive{padding:20px;background-color:#000}.toggleMenu{content:url(/images/svg/menu-close.svg);width:32px;height:32px}.nav-item{display:inline;padding:10px;font-size:1.5rem;color:#fff;text-transform:uppercase;text-shadow:10px 0 20px #00a2ff,10px 0 20px #00a2ff}.nav-link{text-decoration:none}.navbar-brand{color:#fff;text-decoration:none;font-size:1.8rem;text-shadow:10px 0 20px #00a2ff,10px 0 20px #00a2ff}.logo-brand-wrapper{display:inline}.brand-logo{padding:10px 5px 0 15px;text-shadow:1px 1px 2px #000,0 0 25px #00a2ff,10px 0 20px #004f7c}.brand-name{color:#00a2ff}.nav-link:link{color:#fff;text-decoration:none;text-transform:uppercase}.nav-link:visited{color:#fff}.nav-link:hover{color:#fff}.nav-link:active{color:#fff}.nav-link:hover::before{content:"[";left:-10px;color:#00a2ff}.nav-link:hover::after{content:"]";right:-10px;color:#00a2ff}#video-wrapper{background:url(/images/backgrounds/background.webp);background-size:cover;background-position:50%;background-repeat:no-repeat;height:100%;width:100%;-o-object-fit:cover;object-fit:cover;top:0;bottom:0;position:absolute;z-index:0}video{display:inline;background-size:cover;background-position:50%;background-repeat:no-repeat;width:100%;height:100%;-o-object-fit:cover;object-fit:cover;opacity:.6;top:0;bottom:0;position:absolute;z-index:-1}.video-section{position:relative;height:100vh;background-size:cover;background-position:50%;align-items:center;justify-content:center}@media(min-width:768px){.container{display:grid;height:100vh;grid-template-columns:1fr 1fr 1fr;grid-template-rows:1fr 1fr 1fr;grid-template-areas:"nav nav nav" "main main main" "footer footer footer"}.topnav{float:right;padding:15px}.topnav a{display:inline}#burgerMenu{display:none}.dot-arrow{display:none}}