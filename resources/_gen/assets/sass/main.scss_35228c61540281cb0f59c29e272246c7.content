/* Small devices (landscape phones, 576px and up) */
@media (min-width: 576px) {
  /* TEMPLATE CONTAINER */
  .container {
    display: grid;
    grid-template-columns: repeat(8, 1fr);
    grid-template-areas: "header header header header header header header header" "main main main main main main main main" "footer footer footer footer footer footer footer footer"; }
  main {
    display: grid;
    grid-template-columns: repeat(8, 1fr);
    grid-gap: 10px;
    grid-template-areas: "slug-wrapper slug-wrapper slug-wrapper slug-wrapper slug-wrapper slug-wrapper slug-wrapper slug-wrapper" "img-shadow img-shadow img-shadow img-shadow img-shadow img-shadow img-shadow img-shadow"; }
  .img-shadow {
    display: grid;
    grid-template-columns: repeat(8, 1fr);
    grid-template-areas: ". . main-content-2 main-content-2 main-content-2 main-content-2 . ." ". . main-content main-content main-content main-content . ." ". . main-content-3 main-content-3 main-content-3 main-content-3 . ." ". . main-content-4 main-content-4 main-content-4 main-content-4 . ." ". . main-content-5 main-content-5 main-content-5 main-content-5 . ." ". . main-content-6 main-content-6 main-content-6 main-content-6 . ."; }
  /* PRELOADER */
  #loader {
    top: 30%;
    left: 37%; }
  /* NAVBAR */
  .topnav a {
    font-size: 1em; }
  .topnav.responsive a {
    padding: 5px 0px; }
  .responsive {
    margin-top: 0px; } }

/* Medium devices (tablets, 768px and up) */
@media (min-width: 768px) {
  /* PRELOADER */
  #loader {
    top: 32%;
    left: 33%;
    width: 360px;
    height: 360px; }
  /* TEMPLATE CONTAINER */
  .container {
    display: grid;
    grid-gap: 25px;
    grid-template-columns: repeat(8, 1fr);
    grid-template-areas: "header header header header header header" "main main main main main main ." "footer footer footer footer footer footer"; }
  main {
    display: grid;
    grid-template-columns: repeat(8, 1fr);
    grid-gap: 25px;
    grid-template-areas: "slug-wrapper slug-wrapper slug-wrapper slug-wrapper slug-wrapper slug-wrapper slug-wrapper slug-wrapper" "img-shadow img-shadow img-shadow img-shadow img-shadow img-shadow img-shadow img-shadow"; }
  .img-shadow {
    display: grid;
    grid-template-columns: repeat(8, 1fr);
    grid-gap: 25px;
    grid-template-areas: ". main-content main-content main-content main-content-2 main-content-2 main-content-2 ." ". main-content-3 main-content-3 main-content-3 main-content-4 main-content-4 main-content-4 ." ". main-content-6 main-content-6 main-content-6 main-content-5 main-content-5 main-content-5 ."; }
  .main-content,
  .main-content-4,
  .main-content-6 {
    margin-bottom: 0; }
  /* NAVBAR */
  .topnav a {
    font-size: 1.1em; }
  .topnav.responsive a {
    padding: 15px 0px; } }

/* Large devices (desktops, 992px and up) */
@media (min-width: 992px) {
  /* PRELOADER */
  #loader {
    top: 30%;
    left: 40%;
    width: 360px;
    height: 360px; }
  /* NAVBAR */
  .navbar-brand {
    font-size: 1.2em; }
  .topnav {
    float: right;
    padding: 20px; }
  .topnav a {
    display: inline;
    font-size: 1em;
    padding: 15px; }
  #burgerMenu {
    display: none; }
  .brand-logo {
    padding: 15px 5px 0px 15px;
    width: 25px;
    height: 25px; }
  .menu-dot-arrow {
    display: none; }
  .nav-item {
    position: relative;
    padding: 20px 15px; }
  .nav-link:hover::before {
    content: "[";
    display: inline;
    position: absolute;
    left: 15px; }
  .nav-link:hover::after {
    content: "]";
    display: inline;
    position: absolute;
    right: 20px; }
  .active {
    border-bottom: 2px solid var(--primary); }
  /* IMAGES */
  .card:hover {
    color: #fff;
    transform: translateY(-4px);
    box-shadow: 0 5px 20px 0 rgba(0, 0, 0, 0.2);
    transition-delay: 0; } }

/* X-Large devices (large desktops, 1200px and up) */
@media (min-width: 1200px) {
  /* PRELOADER */
  #loader {
    top: 29%;
    left: 36%;
    width: 360px;
    height: 360px; }
  /* NAVBAR */
  .brand-logo {
    width: 20px;
    height: 20px;
    padding: 20px 5px 0px 15px; }
  .navbar-brand {
    font-size: 1.3em; }
  .topnav a {
    font-size: 1em;
    padding: 0 10px; }
  .nav-item {
    padding: 20px 10px; }
  .nav-link:hover::before {
    left: 5px; }
  .nav-link:hover::after {
    right: 10px; }
  /* IMAGES */
  .card-headline {
    padding: 0; }
  .logo-link {
    width: 100%;
    height: 100%; } }

/* XX-Large devices (larger desktops, 1400px and up) */
@media (min-width: 1400px) {
  /* PRELOADER */
  #loader {
    top: 32%;
    left: 38%;
    width: 360px;
    height: 360px;
    background-image: url(/images/preloader/loader.svg); }
  /* NAVBAR */
  .topnav a {
    font-size: 1em; }
  .navbar-brand {
    font-size: 1.2em; }
  .brand-logo {
    padding: 20px 5px 0px 15px;
    width: 20px;
    height: 20px; } }

/* XXX-Large devices (larger desktops, 2000px and up) */
@media (min-width: 2000px) {
  /* PRELOADER */
  #loader {
    top: 45%;
    left: 40%; }
  /* NAVBAR */
  .topnav {
    padding: 30px 0px; }
  .topnav a {
    font-size: 1.2em;
    padding: 0 60px; }
  .nav-item {
    padding: 0; }
  .brand-logo {
    width: 30px;
    height: 30px;
    padding-left: 30px; }
  .navbar-brand {
    font-size: 1.8em; }
  .nav-link:hover::before {
    left: 25px; }
  .nav-link:hover::after {
    right: 25px; } }

/* XXXX-Large devices (larger desktops 4K, 3800px and up) */
@media (min-width: 3800px) {
  /* PRELOADER */
  #loader {
    top: 38%;
    left: 40%; }
  /* NAVBAR */
  .topnav {
    padding: 32px; }
  .topnav a {
    font-size: 2.5em;
    padding: 0 40px; }
  .brand-logo {
    padding: 34px 5px 0px 45px;
    width: 50px;
    height: 50px; }
  .navbar-brand {
    font-size: 3.5em; }
  .nav-link:hover::before {
    left: -10px; }
  .nav-link:hover::after {
    right: 10px; } }
