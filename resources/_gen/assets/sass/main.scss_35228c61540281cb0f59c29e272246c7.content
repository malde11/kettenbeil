/*******************************************************
  Images
*******************************************************/
.logo-link {
  width: 100%;
  height: 100%;
  background-color: #fff; }

.main-content,
.main-content-4,
.main-content-6 {
  margin-bottom: 30px; }

.main-content-2,
.main-content-3,
.main-content-5 {
  background-color: #fff !important; }

.card-headline {
  font-size: 2em;
  font-family: "Smooch Sans";
  transition-delay: 0s, 0s;
  transition-delay: .1s;
  border: none; }

.card {
  background-color: var(--secondary);
  color: #fff;
  align-content: center;
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19); }

.card:link {
  color: #fff; }

.card:visited {
  color: #fff; }

.card:active {
  color: #fff; }

