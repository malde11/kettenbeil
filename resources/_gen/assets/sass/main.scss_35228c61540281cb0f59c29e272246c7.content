/**********************************************
  Kettenbeil.com
  main.css
**********************************************/
* {
  margin: 0;
  padding: 0;
  text-decoration: none;
  font-size: 20px; }

li {
  list-style-type: none; }

/***********************************************
  COLORS / LINKS
***********************************************/
:root {
  --primary: rgb(0, 162, 255);
  --secondary: #151515; }

a:link {
  color: #fff; }

a:visited {
  color: #fff; }

a:hover {
  color: #fff; }

a:active {
  color: #fff; }

/***********************************************
  FONTS
***********************************************/
@font-face {
  font-family: "Smooch Sans";
  font-optical-sizing: auto;
  font-weight: 500;
  font-style: normal;
  src: url("/fonts/SmoochSans-Medium.ttf"); }

h1, h2, h3, h4 {
  font-family: "Smooch Sans";
  font-weight: 500; }

/***********************************************
  TEMPLATE CONTAINER
***********************************************/
.container {
  display: grid;
  height: 100vh;
  margin: 0 auto;
  grid-template-columns: repeat(1fr);
  grid-template-areas: "header" "main" "footer"; }

main {
  display: grid;
  grid-template-columns: repeat(1fr);
  grid-template-areas: "slug-wrapper" "img-shadow"; }

.img-shadow {
  display: grid;
  grid-template-columns: repeat(1fr);
  grid-template-areas: "main-content-2" "main-content" "main-content-3" "main-content-4" "main-content-5" "main-content-6"; }

header {
  grid-area: header;
  background-color: black;
  z-index: -3; }

main {
  grid-area: main;
  text-align: center;
  padding: 30px; }

footer {
  text-align: center;
  grid-area: footer;
  background-color: cornflowerblue; }

.img-shadow {
  grid-area: img-shadow; }

.slug-wrapper {
  grid-area: slug-wrapper; }

.main-content {
  grid-area: main-content; }

.main-content-2 {
  grid-area: main-content-2; }

.main-content-3 {
  grid-area: main-content-3; }

.main-content-4 {
  grid-area: main-content-4; }

.main-content-5 {
  grid-area: main-content-5; }

.main-content-6 {
  grid-area: main-content-6; }

/********************************************
* Preloader
*********************************************/
#loader-background {
  position: fixed;
  display: block;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: black;
  z-index: 998; }

#loader {
  position: fixed;
  display: block;
  top: 25%;
  left: 25%;
  width: 160px;
  height: 160px;
  background-image: url(/images/preloader/loader_small.svg);
  background-repeat: no-repeat;
  z-index: 999;
  -webkit-animation: fadeinout 4s infinite forwards;
  animation: fadeinout 4s infinite forwards;
  opacity: 0; }

@-webkit-keyframes fadeinout {
  50% {
    opacity: 1; } }

@keyframes fadeinout {
  50% {
    opacity: 1; } }

/***********************************************
  Navbar
***********************************************/
nav {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  width: 100vw;
  background-color: var(--secondary);
  z-index: 1; }

#brand-headline {
  display: inline-block; }

#burgerMenu {
  float: right;
  padding: 28px 15px 15px 15px; }

.menu-dot-arrow {
  padding-right: 10px; }

.topnav a {
  display: none;
  color: white;
  font-size: 1.1em; }

.topnav.responsive .icon {
  position: absolute;
  right: 0px;
  top: 0px;
  z-index: 2; }

.topnav.responsive a {
  display: block;
  float: none;
  padding: 16px 0px; }

.responsive {
  margin-top: 24px;
  padding: 0 0 10px 20px;
  background-color: #161616; }

.toggleMenu {
  content: url("/images/svg/menu-close.svg");
  width: 32px;
  height: 32px; }

.nav-item {
  display: inline;
  padding: 0 10px;
  font-family: "Smooch Sans";
  color: white;
  text-transform: uppercase;
  text-shadow: 10px 0px 20px var(--primary), 10px 0px 20px var(--primary); }

.menu-dot-arrow {
  padding-right: 10px; }

.navbar-brand {
  font-family: "Smooch Sans";
  color: white;
  font-size: 1.5em;
  text-shadow: 10px 0px 20px var(--primary), 10px 0px 20px var(--primary); }

.logo-brand-wrapper {
  display: inline; }

.brand-logo {
  width: 25px;
  height: 25px;
  padding: 25px 5px 0px 15px;
  text-shadow: 1px 1px 2px black, 0 0 25px var(--primary), 10px 0px 20px var(--primary); }

.brand-name {
  color: var(--primary);
  font-size: 1em; }

.nav-link:link {
  color: white; }

.nav-link:visited {
  color: white; }

.nav-link:hover {
  color: white; }

.nav-link:active {
  color: white; }

.nav-link:hover::before {
  content: "[";
  display: none;
  color: var(--primary); }

.nav-link:hover::after {
  content: "]";
  display: none;
  color: var(--primary); }

.active {
  display: none; }

/*******************************************************
  Home (Background)
*******************************************************/
#video-wrapper {
  background: url(/images/backgrounds/background.webp);
  background-size: cover;
  background-position: 50%;
  background-repeat: no-repeat;
  height: 100%;
  width: 100%;
  -o-object-fit: cover;
  object-fit: cover;
  top: 0;
  bottom: 0;
  position: absolute;
  z-index: -2; }

video {
  background-size: cover;
  background-position: 50%;
  background-repeat: no-repeat;
  width: 100%;
  height: 100%;
  object-fit: cover;
  opacity: .6;
  top: 0;
  bottom: 0;
  position: absolute;
  z-index: -1; }

.video-section {
  position: relative;
  height: 100vh;
  background-size: cover;
  background-position: 50%;
  display: flex;
  align-items: center;
  justify-content: center; }

.slug {
  text-align: center;
  background-color: #fff;
  padding: 15px;
  font-size: 2.6em; }

