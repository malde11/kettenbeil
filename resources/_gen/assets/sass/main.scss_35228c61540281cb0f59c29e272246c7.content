/* Small devices (landscape phones, 576px and up) */
@media (min-width: 576px) {
  /* PRELOADER */
  #loader {
    top: 30%;
    left: 37%; }
  /* NAVBAR */
  .topnav a {
    font-size: 1.2rem; }
  .topnav.responsive a {
    padding: 5px 0px; } }

/* Medium devices (tablets, 768px and up) */
@media (min-width: 768px) {
  /* PRELOADER */
  #loader {
    top: 32%;
    left: 33%;
    width: 360px;
    height: 360px; }
  /* NAVBAR */
  .topnav a {
    font-size: 1.5rem; }
  .topnav.responsive a {
    padding: 5px 0px; } }

/* Large devices (desktops, 992px and up) */
@media (min-width: 992px) {
  /* TEMPLATE CONTAINER */
  .container {
    display: grid;
    height: 100vh;
    grid-template-columns: 1fr 1fr 1fr;
    grid-template-rows: 1fr 1fr 1fr;
    grid-template-areas: "nav nav nav" "header header header" "main main main" "footer footer footer"; }
  /* PRELOADER */
  #loader {
    top: 30%;
    left: 40%;
    width: 360px;
    height: 360px; }
  /* NAVBAR */
  .topnav {
    float: right;
    padding: 20px; }
  .topnav a {
    display: inline;
    font-size: 1.5rem; }
  #burgerMenu {
    display: none; }
  .brand-logo {
    padding: 17px 5px 0px 15px;
    width: 30px;
    height: 30px; }
  .navbar-brand {
    font-size: 2rem; }
  .menu-dot-arrow {
    display: none; }
  .nav-item {
    position: relative; }
  .nav-link:hover::before {
    content: "[";
    display: inline;
    position: absolute;
    left: -2px; }
  .nav-link:hover::after {
    content: "]";
    display: inline;
    position: absolute;
    right: 2px; } }

/* X-Large devices (large desktops, 1200px and up) */
@media (min-width: 1200px) {
  /* PRELOADER */
  #loader {
    top: 29%;
    left: 36%;
    width: 360px;
    height: 360px; }
  /* NAVBAR */
  .topnav a {
    font-size: 1.8rem; } }

/* XX-Large devices (larger desktops, 1400px and up) */
@media (min-width: 1400px) {
  /* PRELOADER */
  #loader {
    top: 32%;
    left: 38%;
    width: 360px;
    height: 360px;
    background-image: url(/images/preloader/loader.svg); }
  /* NAVBAR */
  .topnav a {
    font-size: 2rem; } }

/* XXX-Large devices (larger desktops, 2000px and up) */
@media (min-width: 2000px) {
  /* PRELOADER */
  #loader {
    top: 45%;
    left: 40%; }
  /* NAVBAR */
  .topnav {
    padding: 35px; }
  .topnav a {
    font-size: 3rem;
    padding: 0 25px; }
  .brand-logo {
    width: 70px;
    height: 70px; }
  .navbar-brand {
    font-size: 5rem; }
  .nav-link:hover::before {
    left: -4px; }
  .nav-link:hover::after {
    right: 4px; } }

/* XXXX-Large devices (larger desktops 4K, 3800px and up) */
@media (min-width: 3800px) {
  /* PRELOADER */
  #loader {
    top: 38%;
    left: 40%; }
  /* NAVBAR */
  .topnav {
    padding: 32px; }
  .topnav a {
    font-size: 4rem;
    padding: 0 25px; }
  .brand-logo {
    width: 80px;
    height: 80px; }
  .navbar-brand {
    font-size: 6.8rem; }
  .nav-link:hover::before {
    left: -10px; }
  .nav-link:hover::after {
    right: 10px; } }
